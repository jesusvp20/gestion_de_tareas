generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de la tabla tareas para gestionar las tareas de la aplicaci√≥n
model tareas{
   id Int @id @default(autoincrement())
   nombre_tarea String
   descripcion String
   tarea_completada Boolean @default(false)
   fecha_creacion DateTime @default(now())
   tarea_completada_fecha DateTime?
}